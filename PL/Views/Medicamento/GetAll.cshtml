@model ML.Medicamento
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/1.3.4/tailwind.min.css" rel="stylesheet" />

@if (Model.Medicamentos.Count > 0)
{
    //bg-indigo-100
    <div class="flex items-center " style="font-family: 'Muli', sans-serif;">
        <div class="container ml-auto mr-auto flex flex-wrap items-start">
            <div class="text-center w-full pl-5 lg:pl-2 mb-4 mt-4">
                <h1 class="text-3xl lg:text-4xl text-gray-700 font-extrabold">
                    Medicamentos
                </h1>
            <br />
                <a class="btn btn-success" href="@Url.Action("Form","Medicamento")">Agregar Medicamento</a>
            </div> @*fin del titulo*@
            <hr />
            @foreach (ML.Medicamento medicamento in Model.Medicamentos)
            {
                <div class="w-full md:w-1/2 lg:w-1/4 pl-5 pr-5 mb-5 lg:pl-2 lg:pr-2">
                    <div class="bg-white rounded-lg m-h-64 p-2 transform hover:translate-y-2 hover:shadow-xl transition duration-300">
                        <figure class="mb-2">
                            <img src="https://statics-cuidateplus.marca.com/cms/styles/natural/azblob/desarrollo-medicamento.jpg.webp?itok=8gYRCM-g" alt="" class="h-64 ml-auto mr-auto" />
                        </figure>
                        <div class="rounded-lg p-4 bg-purple-700 flex flex-col">
                            <div>
                                <h5 class="text-white text-2xl font-bold leading-none">
                                   @medicamento.NombreMedicamento
                                </h5>
                                <span class="text-xs text-gray-400 leading-none">Disponible: @medicamento.Cantidad</span>
                            </div>
                            <div class="flex items-center">
                                <div class="text-lg text-white font-light">
                                    $ @medicamento.Precio
                                </div>
                                <a class="btn btn-warning rounded-full bg-purple-900 text-white hover:bg-white hover:text-purple-900 hover:shadow-xl focus:outline-none w-10 h-10 flex ml-auto transition duration-300" href="@Url.Action("Form","Medicamento",new {IdMedicamento=medicamento.IdMedicamento})"><span class="glyphicon glyphicon-pencil"></span></a>
                                <a class="btn btn-danger rounded-full bg-purple-900 text-white hover:bg-white hover:text-purple-900 hover:shadow-xl focus:outline-none w-10 h-10 flex ml-auto transition duration-300" href="@Url.Action("Delete","Medicamento",new {IdMedicamento=medicamento.IdMedicamento})"><span class="glyphicon glyphicon-trash"></span></a>
                                <a class="btn btn-info rounded-full bg-purple-900 text-white hover:bg-white hover:text-purple-900 hover:shadow-xl focus:outline-none w-10 h-10 flex ml-auto transition duration-300" href="@Url.Action("AddMedicamento","Medicamento",new {IdMedicamento=medicamento.IdMedicamento})"><span class="glyphicon glyphicon-plus"></span></a>
                                @*<button href="javascript:;" class="rounded-full bg-purple-900 text-white hover:bg-white hover:text-purple-900 hover:shadow-xl focus:outline-none w-10 h-10 flex ml-auto transition duration-300">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="stroke-current m-auto">
                                        <line x1="12" y1="5" x2="12" y2="19"></line>
                                        <line x1="5" y1="12" x2="19" y2="12"></line>
                                    </svg>
                                </button>*@
                            </div>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>

}
else
{
    <div class="alert alert-warning" role="alert">
        No hay registros de medicamentos.
    </div>
}
