@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Usuario registrados</h2>
<a class="btn btn-success" href="@Url.Action("Form","Usuario")">Agregar Usuario</a>
<hr />
@if (Model.Usuarios.Count > 0)
{
    <div class="container">
        <div class="row">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th class="text-center">Actualizar</th>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Apellido Paterno</th>
                        <th class="text-center">Apellido Materno</th>
                        <th class="text-center">Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @* foreach *@
                    @foreach (ML.Usuario usuario in Model.Usuarios)
                    {
                    <tr class="text-center">
                        <td><a  class="btn btn-warning" href="@Url.Action("Form","Usuario",new {IdUsuario=usuario.IdUsuario})"><span class="glyphicon glyphicon-pencil"></span></a></td>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.ApellidoPaterno</td>
                        <td>@usuario.ApellidoMaterno</td>
                        <td><a class="btn btn-danger" href="@Url.Action("Delete","Usuario",new {IdUsuario=usuario.IdUsuario})"><span class="glyphicon glyphicon-trash"></span></a></td>
                    </tr>
                    }

                </tbody>

            </table>
        </div>
    </div>




}
else
{
    <div class="alert alert-warning" role="alert">
        No hay registros de usuarios
    </div>
}